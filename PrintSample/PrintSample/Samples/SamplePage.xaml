<UserControl x:Class="PrintSample.SamplePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrintSample"
             mc:Ignorable="d" 
             d:DesignHeight="1122.52" d:DesignWidth="793.70"
             Height="1122.52" Width="793.70" Background="#FFFFFFCC">
    <StackPanel Orientation="Vertical">
        <Label Content="印刷のサンプルページです。" />
        <Label Content="1234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890" />
        <Label Margin="0 20"
               Content="{Binding Option1}"
               ContentStringFormat="{} サンプルデータ１は {0} です。" />
        <Label Margin="0 20"
               Content="{Binding Option2}"
               ContentStringFormat="{} サンプルデータ２は {0} です。" />
    </StackPanel>
</UserControl>
